    <div>
      <a href="/wallet-link">Link to Agoric wallet</a>
    </div>
    <div>
      <a href="/">Homepage</a>
    </div>
    <div>
      <a href="/auth/logout">Logout</a>
    </div>
    <div>
      <a href="/token-gated">Exclusive Content</a>
    </div>
    <% } %>
  </body>
</html>
